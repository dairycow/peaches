# Application Configuration
# ====================
# All environment variables use double underscore (__) as delimiter
# Example: DATABASE__PATH, LOGGING__LEVEL, GATEWAY__HOST
#
# Database Configuration
# -------------------
DATABASE__PATH=/app/data/trading.db
DATABASE__BACKUP_ENABLED=true
DATABASE__BACKUP_INTERVAL_HOURS=24
DATABASE__BACKUP_RETENTION_DAYS=30

# Logging Configuration
# --------------------
LOGGING__LEVEL=INFO
LOGGING__FILE=/app/logs/bot.log
LOGGING__ROTATION=100 MB
LOGGING__RETENTION=7 days
LOGGING__JSON_FORMAT=true

# IB Gateway Configuration
# -----------------------
GATEWAY__HOST=ib-gateway
GATEWAY__PORT=4004
GATEWAY__CLIENT_ID=1
GATEWAY__CONNECT_TIMEOUT=30
GATEWAY__AUTO_RECONNECT=true
GATEWAY__RECONNECT_INTERVAL=5
GATEWAY__MAX_RECONNECT_ATTEMPTS=10

# Health Check Configuration
# -----------------------
HEALTH__ENABLED=true
HEALTH__INTERVAL_SECONDS=30
HEALTH__GATEWAY_TIMEOUT=5
HEALTH__UNHEALTHY_THRESHOLD=3
