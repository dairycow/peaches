{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Pytest: All Unit Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "-m", "not integration"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Pytest: Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/integration/",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Pytest: Specific Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/integration/test_asx_price_sensitive.py::test_asx_price_sensitive_scanner_real_url",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
